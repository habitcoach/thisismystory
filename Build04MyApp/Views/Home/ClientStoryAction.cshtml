@model Build04MyApp.Models.ClientStory

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Creative Design landing page.">
    <meta name="author" content="Devcrud">
    <title>Your story</title>

    <!-- font icons -->
    <link rel="stylesheet" href="~/ClientStoryCSS/assets/vendors/themify-icons/css/themify-icons.css">

    <!-- Bootstrap + Creative Design main styles -->
    <link rel="stylesheet" href="~/ClientStoryCSS/assets/css/creative-design.css">

</head>
<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">
    
 
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index">RK</a>
           
                
            

           
                <a class="navbar-brand"  style="float:right" asp-action="Index">HOME</a>
                
                 
               
               @* class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">*@
            
          
           </div>
    </nav>




    <!-- Contact Section -->
    <section id="contact" class="text-center">
        <!-- container -->
        <div class="container">
            <h1>Write your thoughts </h1>
            <p class="mb-5">Kindly note that the story will be scrutinized for plagiarism and will take 24-48 hours to get published.</p>
            
            <!-- Contact form -->
            <form class="contact-form col-md-11 col-lg-9 mx-auto" asp-action="ClientStoryAction">
                <div class="form-row">
                    <div class="col form-group">
                        <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                          <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col form-group">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col form-group">
                        <input type="text" class="form-control" asp-for="Title" placeholder="Story Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col form-group">
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone(optional)">
                        
                    </div>
                </div>

              @*  <div class="form-group">
                    <textarea name="" id="" cols="30" rows="5" class="form-control" placeholder="Your Message"> </textarea>
                </div>
*@              <div  class="col form-group">
                @Html.TextAreaFor(m => m.StoryDes,5,30, new { placeholder="Enter your story here", @class = "col form-group" })
                <span asp-validation-for="StoryDes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-dark btn-block" value="Publish story">
                </div>

             
            </form><!-- End of Contact form -->      
            @if ((string)ViewData["flag"]=="success")
            {
                <a class="btn btn-dark" asp-action="Index">Your story has been recorded. Thanks</a>
            }
        </div><!-- End of Container-->      
    </section><!-- End of Contact Section -->   
      
    <!-- core  -->
    <script src="~/ClientStoryCSS/assets/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="~/ClientStoryCSS/assets/vendors/bootstrap/bootstrap.bundle.js"></script>

    <!-- bootstrap affix -->
    <script src="~/ClientStoryCSS/assets/vendors/bootstrap/bootstrap.affix.js"></script>

    <!-- Creative Design js -->
    <script src="~/ClientStoryCSS/assets/js/creative-design.js"></script>

</body>
</html>
